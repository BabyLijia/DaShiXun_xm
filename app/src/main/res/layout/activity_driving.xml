<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DrivingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/is_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="是否已经取得驾照"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/is_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/is_tv"
        android:gravity="center"
        android:text="帮您精准推荐我们的服务"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/is_tv2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/mimg_lsj"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/old_driver_img" />

        <ImageView
            android:id="@+id/mimg_no"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/not_signup_img" />

        <ImageView
            android:id="@+id/mimg_yes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/is_signup_img" />
    </LinearLayout>

</RelativeLayout>