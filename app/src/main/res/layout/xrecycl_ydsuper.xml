<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/mimg_beifangScool"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ll9"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll9"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/mimg_beifangScool"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_renshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="ofo手气卡"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/dajiang"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:text="ofo放大招！周卡.包天卷.骑行卷.大奖等你抽"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_manny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="5悦豆"
            android:textColor="#DDF40404"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
