<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".activity.Pleasing_imageActivity">

    <LinearLayout
        android:id="@+id/mll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mimg_pleasing"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/guide_01" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="选择我的九悦形象"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/set_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="设置个性化形象吸引更多人关注你"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/mll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mll"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_mgfs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="高富帅"
            android:background="@drawable/gerenxx"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/bt_mbfm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="白富美"
            android:background="@drawable/gerenxx"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mll2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_mn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="N次元"
            android:layout_margin="5dp"
            android:background="@drawable/gerenxx"/>

        <Button
            android:id="@+id/bt_msmk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数码控"
            android:layout_margin="5dp"
            android:background="@drawable/gerenxx"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mll3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_mbdg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="八卦党"
            android:layout_margin="5dp"
            android:background="@drawable/gerenxx"/>

        <Button
            android:id="@+id/bt_manger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小天使"
            android:layout_margin="5dp"
            android:background="@drawable/gerenxx"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mll4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_mjz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="兼职能手"
            android:layout_margin="5dp"
            android:background="@drawable/gerenxx"/>

        <Button
            android:id="@+id/bt_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="运动达人"
            android:layout_margin="5dp"
            android:background="@drawable/gerenxx"/>
    </LinearLayout>

    <Button
        android:id="@+id/mnext"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp"
        android:layout_below="@id/mll5"
        android:text="下一步"
        android:paddingBottom="5dp"
        android:textSize="10sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:background="@drawable/next"/>
</RelativeLayout>