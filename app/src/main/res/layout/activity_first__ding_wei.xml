<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.city_dinwei.First_DingWeiActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="选择城市"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:background="#FF8B8989"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:padding="5dp"
            android:src="@drawable/image_search" />

        <EditText
            android:id="@+id/med_chengshi"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#fff"
            android:hint="输入城市名或拼音查询"
            android:padding="3dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:padding="5dp"
            android:src="@drawable/image_post_address" />

        <TextView
            android:id="@+id/mtv_dangqiandw"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="当前定位城市为 "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mtv2_dwzhi"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:padding="2dp"
            android:text="榆林市 "
            android:textColor="@color/color2"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/reimen"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ll_2"
        android:background="#eee"
        android:padding="10dp"
        android:text="热门城市"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reimen"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/mtv_beijing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:text="北京市"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtv_shijiaz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:text="石家庄市"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtv_langfang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:text="廊坊市"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtv_huhehaote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:text="呼和浩特市"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_3"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/mtv_nanjing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:text="南京市"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtv_wuhan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:text="武汉市"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtv_kunming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:text="昆明市"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtv_xian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/yuanjiao"
            android:gravity="center"
            android:text="西安市"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_4">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.asus.jouyuejiache_dashixun1.activity.city_dinwei.SideBar
            android:id="@+id/side_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>