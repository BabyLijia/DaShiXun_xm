<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.First_LogActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mlog_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jyue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢迎来到九悦"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/mshouye_regste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:text="注册"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/mlog_Tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mlog_Toolbar"
        app:tabSelectedTextColor="@color/color2"
        app:tabIndicatorColor="@color/color2"
        app:tabTextColor="@color/color_plea"
        android:layout_marginTop="10dp"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        android:padding="15dp"
        app:tabMode="fixed"
        android:background="#eee">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mviewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mlog_Tablayout">

    </android.support.v4.view.ViewPager>
</RelativeLayout>