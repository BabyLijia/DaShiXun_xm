    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:background="#FFE2DCDC"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:padding="5dp"
            android:src="@drawable/image_search" />

        <EditText
            android:id="@+id/med_chengshi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#fff"
            android:hint="搜索商品"
            android:padding="5dp"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1">

        <ListView
            android:id="@+id/mlv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"></ListView>

        <TextView
            android:id="@+id/mtv_tiaomu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mlv"
            android:padding="10dp"
            android:text="华晨二手车 ( 57 )" />


        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/mXRecycl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mtv_tiaomu"
            android:layout_toRightOf="@id/mlv"></com.jcodecraeer.xrecyclerview.XRecyclerView>
