<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeee"
    tools:context=".fragment.fragment_jiakao.ZhengFragment">

   <LinearLayout
       android:id="@+id/lingzhao"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_marginTop="10dp"
       android:background="#fff"
       android:orientation="horizontal">

       <ImageView
           android:layout_marginTop="10dp"
           android:layout_marginLeft="20dp"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/icon_notice"/>

       <TextView
           android:id="@+id/tv1"
           android:layout_marginTop="10dp"
           android:text="领照须知"
           android:textStyle="bold"
           android:textSize="15sp"
           android:layout_marginLeft="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

   </LinearLayout>

    <LinearLayout
        android:id="@+id/shijian"
        android:layout_below="@id/lingzhao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mbt_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="领取时间地点"
            android:background="@drawable/gerenxx"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/mbt_jiazhao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="驾照年审"
            android:background="@drawable/gerenxx"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/shijian2"
        android:layout_below="@id/shijian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mbt_yishi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="驾照遗失挂失"
            android:background="@drawable/gerenxx"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/mbt_huanz"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="驾照换证"
            android:background="@drawable/gerenxx"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lingzhao2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:background="#fff"
        android:layout_below="@id/shijian2"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xiaoche_new"/>

        <TextView
            android:layout_marginTop="15dp"
            android:text="新手上路"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shanglu"
        android:layout_below="@id/lingzhao2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mbt_zyshixiang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="上路前注意事项"
            android:background="@drawable/gerenxx"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/mbt_xshiz"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="行驶中注意事项"
            android:background="@drawable/gerenxx"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/shanglu2"
        android:layout_below="@id/shanglu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mbt_stop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="停车时注意事项"
            android:background="@drawable/gerenxx"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/mbt_jiqiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="实用驾车技巧"
            android:background="@drawable/gerenxx"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>